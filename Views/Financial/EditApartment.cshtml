@model AirbnbShopApi.Models.Apartment

@{
    ViewData["Title"] = "Editar Apartamento";
    var allApartments = ViewBag.AllApartments as List<Apartment>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditApartment" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Identifier">Identificador</label>
        <input asp-for="Identifier" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Balance">Saldo</label>
        <input asp-for="Balance" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label asp-for="PixKey">Chave Pix</label>
        <input asp-for="PixKey" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>